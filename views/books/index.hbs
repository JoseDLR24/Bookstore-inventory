{{!-- <h1>Employer List</h1>
{{#if user}}
    <a href="/employers/create">Add a New Employer</a>
{{/if}} --}}
<table class="table table-striped table-hover">
    <thead>
        <th>Name</th>
        <th>Genre</th>
        <th>Audience Target</th>
        <th>Synopsis</th>
        <th>Date Published</th>
        <th>Price</th>
        {{!-- {{#if user}}
            <th class="text-center">Actions</th>
        {{/if}} --}}
    </thead>
    <tbody>
        {{#each bookslist}}
            <tr>
                <td>{{this.title}}</td>
                <td>{{this.genre}}</td>
                <td>{{this.audiencetarget}}</td>
                <td>{{this.synopsis}}</td>
                <td>{{this.datepublished}}</td>
                <td>{{this.price}}</td>
                {{#if ../user}}
                    <td class="text-center">
                        <a href="/employers/edit/{{this._id}}" title="Edit"><i class="fa-solid fa-pen-to-square"></i></a>
                        <a href="/employers/delete/{{this._id}}" title="Delete" onclick="return confirmDelete();">
                            <i class="fa-solid fa-trash-can"></i>
                        </a>                
                    </td>
                {{/if}}
            </tr>
        {{/each}}
    </tbody>
</table>